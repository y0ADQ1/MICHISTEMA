<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#D680BA"
    tools:context=".ui.main.CatFeederActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:elevation="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Volver"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_button_back"
            android:stateListAnimator="@animator/button_elevation"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/nameLitterBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Comedor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_container"
        android:elevation="8dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/containerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CE8BB9"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtDeviceId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID del dispositivo:"
                android:background="#F6DCEE"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre del Dispositivo:"
                android:background="#F6DCEE"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDeviceId"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_estaono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Esta o no"
                android:background="#F6DCEE"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDeviceName"
                app:layout_constraintEnd_toStartOf="@id/tv_estaono4" />

            <TextView
                android:id="@+id/tv_estaono4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="v_e"
                android:background="#F6DCEE"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_estaono"
                app:layout_constraintTop_toBottomOf="@id/txtDeviceName"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_pz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Peso del Tazon"
                android:background="#F6DCEE"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_estaono" />

            <TextView
                android:id="@+id/tv_vpz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="v_pz"
                android:background="#F6DCEE"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_pz"
                app:layout_constraintTop_toBottomOf="@id/tv_estaono4"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="#F6DCEE"
                android:stateListAnimator="@animator/button_elevation"
                android:layout_marginStart="25dp"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_vpz"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="#F6DCEE"
                android:stateListAnimator="@animator/button_elevation"
                android:layout_marginStart="25dp"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn1"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
