<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D680BA"
    android:padding="16dp"
    tools:context=".ui.main.DeviceDetailComedorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:elevation="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Volver"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_button_back"
            android:stateListAnimator="@animator/button_elevation"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="COMEDORES"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintHorizontal_bias="2.5"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor principal para el contenido -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_container"
        android:elevation="8dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/containerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CE8BB9"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtDeviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="ID del Dispositivo" />

                <TextView
                    android:id="@+id/txtDeviceName"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"

                    android:layout_height="wrap_content"
                    android:text="Nombre del Dispositivo" />


                <!-- Hay Agua y Valor en una sola línea -->

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content"
                    android:text="ABRE" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CIERRA" />
                <!-- Agrega más TextViews u otros elementos según lo necesites -->


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
