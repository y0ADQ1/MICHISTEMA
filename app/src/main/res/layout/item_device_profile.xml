<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@drawable/rounded_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">

        <!-- Icono decorativo -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/noun_litter_box_6692365"
            android:layout_marginEnd="12dp"
            app:tint="@android:color/black" />

        <!-- Nombre del dispositivo -->
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del dispositivo"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Cantidad con fondo circular -->
        <TextView
            android:id="@+id/tv_device_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="32dp"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_quantity_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>