package com.example.michistema.ui.auth

import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import com.example.michistema.databinding.ActivityAddSandBoxBinding
import android.app.Activity
import android.content.Intent
import androidx.activity.viewModels
import com.example.michistema.models.SandBoxItem
import com.example.michistema.viewmodel.AddSandBoxViewModel

class AddSandBoxActivity : AppCompatActivity() {
    private lateinit var binding: ActivityAddSandBoxBinding
    private val viewModel: AddSandBoxViewModel by viewModels()

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        binding = ActivityAddSandBoxBinding.inflate(layoutInflater)
        setContentView(binding.root)

        binding.npHours.minValue = 0
        binding.npHours.maxValue = 23
        binding.npMinutes.minValue = 0
        binding.npMinutes.maxValue = 59

        viewModel.sandBoxName.observe(this) { name ->
            if (binding.etSandBoxName.text.toString() != name) {
                binding.etSandBoxName.setText(name)
            }
        }

        viewModel.hours.observe(this) { hours ->
            if (binding.npHours.value != hours) {
                binding.npHours.value = hours
            }
        }

        viewModel.minutes.observe(this) { minutes ->
            if (binding.npMinutes.value != minutes) {
                binding.npMinutes.value = minutes
            }
        }

        viewModel.isSaveEnabled.observe(this) { isEnabled ->
            binding.btnSave.isEnabled = isEnabled
        }

        viewModel.newSandBoxItem.observe(this) { newItem ->
            if (newItem != null) {
                val resultIntent = Intent().apply {
                    putExtra(EXTRA_NEW_SANDBOX_ITEM, newItem)
                }
                setResult(Activity.RESULT_OK, resultIntent)
                finish()
            }
        }

        binding.etSandBoxName.addTextChangedListener(object : android.text.TextWatcher {
            override fun beforeTextChanged(s: CharSequence?, start: Int, count: Int, after: Int) {}
            override fun onTextChanged(s: CharSequence?, start: Int, before: Int, count: Int) {}
            override fun afterTextChanged(s: android.text.Editable?) {
                viewModel.setSandBoxName(s.toString())
            }
        })

        binding.npHours.setOnValueChangedListener { _, _, newVal ->
            viewModel.setHours(newVal)
        }

        binding.npMinutes.setOnValueChangedListener { _, _, newVal ->
            viewModel.setMinutes(newVal)
        }

        binding.btnSave.setOnClickListener {
            viewModel.saveSandBoxItem()
        }

        binding.backButton.setOnClickListener {
            finish()
        }
    }

    companion object {
        const val EXTRA_NEW_SANDBOX_ITEM = "extra_new_sandbox_item"
    }
}